{
  "name": "lighthouse-beacon",
  "version": "0.1.0",
  "description": "Lighthouse Chat IDE - AI-powered development environment with natural language interaction",
  "main": "dist-electron/main/index.js",
  "type": "module",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:clean": "pkill -f vitest || true",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,html}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,html}\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install",
    "postinstall": "cd node_modules/@ai-chat-sdk/core/typescript && npm install && npm run build"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "electron",
    "ide",
    "ai",
    "lighthouse",
    "chat",
    "developer-tools"
  ],
  "author": "Lighthouse Team",
  "license": "MIT",
  "dependencies": {
    "@ai-chat-sdk/core": "github:onshoreoutsourcing/AIChatSdk#master",
    "@monaco-editor/react": "^4.7.0",
    "@onshore-outsourcing/pci-hipaa-detector": "github:onshoreoutsourcing/SDK-PCI-HIPAA-Detection#typescript-sdk-v0.2.0",
    "@xenova/transformers": "^2.17.2",
    "@xyflow/react": "^12.10.0",
    "axios": "^1.13.2",
    "electron-log": "^5.4.3",
    "js-yaml": "^4.1.0",
    "lucide-react": "^0.562.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^16.1.0",
    "remark-gfm": "^4.0.1",
    "uuid": "^13.0.0",
    "vectra": "^0.12.3",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.0.0",
    "@vitest/ui": "^2.0.0",
    "autoprefixer": "^10.4.23",
    "electron": "^35.7.5",
    "electron-vite": "^2.3.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "happy-dom": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "monaco-editor": "^0.55.1",
    "postcss": "^8.5.6",
    "prettier": "^3.8.0",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.7.3",
    "vite": "^5.4.11",
    "vitest": "^2.0.0"
  }
}
